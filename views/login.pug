doctype html
html
  head
  include ./head
    title Login Form
  body
    include ./header
    .body
        h2 Login Page
        .loginContainer
            .login
                .login.content
                    label
                        b
                        | User Name
                    input(type='text', name='username', placeholder='Username', id='username')
            .login
                .login.content
                    label
                        b
                        | Password
                    input(type='password', name='password', placeholder='Password', id='password')
            .login
                .login.content
                    input(type='button', name='log-in', value='Log In', id='log-in', onclick="loginUser()")
                    br
            .login
                a(href="/register") Not Registered?
